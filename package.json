{
  "name": "piuomeno",
  "description": "Conversioni non convenzionali",
  "version": "0.5.0",
  "author": "Matteo Manzinello",
  "private": true,
  "homepage": "https://piuomeno.netlify.com/",
  "dependencies": {
    "dotenv": "^7.0.0",
    "grommet": "^1.13.0",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-scripts": "2.1.8"
  },
  "main": "public/electron.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "electron": "electron .",
    "electron-dev": "ELECTRON_START_URL=http://localhost:3000 electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.matteomanzinello.piuomeno",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets/icons/mac"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icons/mac/icon.icns"
    },
    "win": {
      "target": "NSIS",
      "icon": "assets/icons/win/piuomeno.ico"
    },
    "linux": {
      "target": "deb"
    }
  },
  "devDependencies": {
    "electron": "^4.1.0",
    "electron-builder": "^20.39.0",
    "electron-packager": "^13.1.1"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
